<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContactWave" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:textSize">16sp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:tint">#0A3E8E</item>


    </style>

    <style name="texviewPhoneEfect" parent="texviewPhoneEfect" tools:ignore="ResourceCycle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="fontFamily">@font/allerta</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="texviewUserEfect" parent="texviewUserEfect" tools:ignore="ResourceCycle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fontFamily">@font/allerta</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="btnEffects">
        <item name="backgroundTint">@color/black</item>
        <item name="android:soundEffectsEnabled">true</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>




</resources>